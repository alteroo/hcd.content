<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="hcd.content">

    <configlet
        title="Site setup"
        action_id="hcd.content.siteSetting"
        appId="hcd.content"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@siteSettingControlPanel"
        icon_expr="string:/favicon.ico"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
